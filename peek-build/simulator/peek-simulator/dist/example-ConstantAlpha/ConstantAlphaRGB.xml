<view name="mainview" width="320" height="220">
	<box id="gradbox" width="100%" height="100%" packing="vertical">
		<image alignment="center" reference="plasma" margin="10" alpha="150"/>
		<image alignment="center" reference="plasma" transparency="full" margin="10" alpha="150"/>
		<image alignment="center" reference="plasma" transparency="stencil" margin="10" alpha="150"/>
		<image alignment="center" reference="plasma" transparency="none" margin="10" alpha="150"/>
	</box>
</view>
</application>
